        <p class="mb-0">News are updated daily and are not stored as of now.</p>
      </div>
    </div>

    


    

    <% let i = 0; %>
    <% articles.forEach(article => { %>
    <section class="charts mt-4">
      <div class="chart-container p-3">
        <%= ++i %>
        <!-- <h3 class="fs-6 mb-3">News Number <%= i %></h3> -->
        
            <div class="article">
                <h4 style="color: lightblue;"><a href="<%= article.link %>" target="_blank"><%= article.title %></a></h4>
                <% if(article.imageUrl) { %>
                    <img src="<%= article.imageUrl %>" alt="Article Image" height="100px">
                <% } %>
                <hr>
                <p ><%= article.description %></p>
                <footer >Published: <%= new Date(article.pubDate).toLocaleDateString("en-US", { year: 'numeric', month: 'long', day: 'numeric' }) %></footer>
                
            </div>
        
    </section>
    <% }) %>
  </div>
</section>
